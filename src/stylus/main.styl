.application--wrap > main:not(.content)
  flex-direction: column

.carousel__item
  transition .8s ease-out
  cursor pointer

h3
  font-size: 2rem


.custom-loader {
  animation: loader 1s infinite;
  display: flex;
}

@keyframes loader {
  from {
    transform: rotate(0);
  }
  to {
    transform: rotate(360deg);
  }
}